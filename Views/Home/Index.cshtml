                <div>
                    <form class="form-group" action="/Home/GetOrder" method="post">
                        <label>@hotestorder_tmp.Value["cost"] Baht</label>
                        <button class="btn btn-info" name="OrderCode" value="@hotestorder_tmp.Key" type="submit">Buy</button>
                    </form>
                </div>
                <div>
                    <div>Spec1 : @hotestorder_tmp.Value["Spec1"]</div>
                    <div>Spec2 : @hotestorder_tmp.Value["Spec2"]</div>
                    <div>Spec3 : @hotestorder_tmp.Value["Spec3"]</div>
                    <div>Spec4 : @hotestorder_tmp.Value["Spec4"]</div>
                </div>
            </div>
        }
    </div>
</div>